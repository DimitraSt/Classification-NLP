        "#Get sentences \n",
        "def get_sentences(text):\n",
        "\n",
        "    data = nlp(text)\n",
        "    sentences = [sentence for sentence in data.sents]\n",
        "\n",
        "    return sentences"
      ],
      "execution_count": 3,
      "outputs": []
    },
    {
