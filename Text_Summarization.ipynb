      },
      "source": [
        "#Get individual tokens\n",
        "def get_tokens(text):\n",
        "\n",
        "    data = nlp(text)\n",
        "    tokens = [token.text for token in data]\n",
        "\n",
        "    return tokens"
      ],
      "execution_count": 4,
      "outputs": []
    },
    {
      "cell_type": "code",
